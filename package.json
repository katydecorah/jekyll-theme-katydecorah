  "bugs": {
    "url": "https://github.com/katydecorah/theme/issues"
  },
  "homepage": "https://github.com/katydecorah/theme#readme",
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.2.1",
